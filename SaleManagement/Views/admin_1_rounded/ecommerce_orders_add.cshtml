        }
        function searchCustomer() {
            var phoneInput = document.getElementById('Phone');
            var phoneNumber = phoneInput.value;
            $.ajax({
                method: 'POST',
                url: '/Customer/SearchCustomer_JSON?phoneNumber=' + phoneNumber,
                success: function (result) {
                    if (result.length <= 5) {
                        let str = "";
                        result.forEach(item => {
                            str += `<div
                                    onclick='itemSearchClick("${item.Phone}")'
                                    class="item-listSearch"
                                    >${item.Phone}</div>`
                        });
                        document.getElementById("listSearchContainer").style.visibility = "visible";
                        document.getElementById("listSearchContainer").innerHTML = str;
                    } else {
                        document.getElementById("listSearchContainer").style.visibility = "hidden";
                    }
                },
                error: function (err) {
                    console.log(err);
                }
            });
        }
        function itemSearchClick(phoneNumber) {
            var phoneInput = document.getElementById('Phone');
            phoneInput.value = phoneNumber;
            document.getElementById("listSearchContainer").style.visibility = "hidden";
            $.ajax({
                method: 'POST',
                url: '/Customer/SearchCustomer_JSON?phoneNumber=' + phoneNumber,
                success: function (result) {
                    document.getElementById('customer-FullName').value = result[0]['FullName'];
                    document.getElementById('customer-Email').value = result[0]['Email'];
                    document.getElementById('customer-Address').value = result[0]['Address'];
                    customer = result[0];
                },
                error: function (err) {
                    console.log(err);
                }
            });
        }
        function getData() {
            $.ajax({
                method: 'POST',
                url: '/Product/SearchProduct_JSON',
                success: function (result) {
                    allProduct = result;
                    setDataList();
                },
                error: function (err) {
                    console.log(err);
                }
            });
        }
        function printProduct(number) {
            var Code = document.getElementsByName('ID')[number].value;
            for (var i = 0; i < allProduct.length; i++) {
                if (allProduct[i]['Code'] == Code) {
                    product[number] = allProduct[i];
                    break;
                }
            }
            if (product[number] == null) {
                return;
            } else {
                print(number);
            }
        }
        function calculateTotal(number) {
            amount[number] = document.getElementsByName('Amount')[number].value;
            total[number] = amount[number] * product[number]['RetailPrice'];
            document.getElementsByName('Total')[number].value = makeNumber(total[number]);
            setTotalValue();
        }
        function add() {
            var value = '';
            for (var i = 0; i <= numberProduct; i++) {
                value += '<tr>';
                value += '<td>';
                value += '  <input list="Code" class="form-control" size="15" onchange="printProduct(' + i + ')" name="ID" />';
                value += '  <datalist id="Code"></datalist>';
                value += '</td>';
                value += '<td>';
                value += '  <input type="text" value="" class="form-control" size="30" name="Name"/>';
                value += '</td>';
                value += '<td>';
                value += '  <input class="form-control" type="text" size="9" value="" name="Status" readonly />';
                value += '</td>';
                value += '<td>';
                value += '  <input class="form-control" type="text" size="9" value="" name="Oprice" readonly />';
                value += '</td>';
                value += '<td>';
                value += '  <input class="form-control" type="text" size="9" value="" name="Price" readonly />';
                value += '</td>';
                value += '<td>';
                value += '  <input class="form-control" type="number" style="width: 5em" value="" name="Amount" onchange="calculateTotal(' + i + ')" />';
                value += '</td>';
                value += '<td>';
                value += '  <input class="form-control" type="text" style="width: 5em" value="" readonly name="Discount" />';
                value += '</td>';
                value += '<td>';
                value += '  <input class="form-control" type="text" value="" readonly name="Total" />';
                value += '</td>';
                value += '</tr>';
            }
            value += '<tr>';
            value += '<td></td>';
            value += '<td></td>';
            value += '<td></td>';
            value += '<td></td>';
            value += '<td></td>';
            value += '<td></td>';
            value += '<td>';
            value += '  Total value:';
            value += '</td>';
            value += '<td>';
            value += '  <input class="form-control" type="text" value="" readonly name="TotalValue" />';
            value += '</td>';
            value += '</tr>';
            document.getElementById('order-detail-body').innerHTML = value;
            setDataList();
            setTotalValue();
            for (var i = 0; i < numberProduct; i++) {
                print(i);
            }
            numberProduct++;
        }
        function print(number) {
            document.getElementsByName('ID')[number].value = product[number]['Code'];
            document.getElementsByName('Name')[number].value = product[number]['Name'];
            if (product[number]['Status'] == 0) {
                document.getElementsByName('Status')[number].value = "Còn hàng";
            } else {
                document.getElementsByName('Status')[number].value = "Hết hàng";
            }
            document.getElementsByName('Oprice')[number].value = makeNumber(product[number]['RetailPrice']);
            document.getElementsByName('Price')[number].value = makeNumber(product[number]['RetailPrice']);
            document.getElementsByName('Amount')[number].value = (amount[number] == null ? 0 : amount[number]);
            document.getElementsByName('Discount')[number].value = product[number]['DiscountRate'] + '%';
            document.getElementsByName('Total')[number].value = (total[number] == null ? 0 : total[number]);
        }
        function setDataList() {
            var value_code = '';
            for (var i = 0; i < allProduct.length; i++) {
                value_code += '<option>' + allProduct[i]['Code'] + '</option>';
            }
            document.getElementById('Code').innerHTML = value_code;
        }
        function setTotalValue() {
            var total_value = 0;
            for (var i = 0; i < numberProduct; i++) {
                console.log(total[i]);
                total_value += parseInt(total[i]);
            }
            document.getElementsByName('TotalValue')[0].value = makeNumber(total_value);
        }
        function makeNumber(number) {
            var value = '';
            var count = 0;
            while (number >= 1) {
                count++;
                value = number % 10 + value;
                number = Math.floor(number / 10);
                if (count % 3 == 0 && number >= 1) {
                    value = '.' + value;
                }
            }
            return value;
        }
